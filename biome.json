{
	"$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
	"files": {
		"includes": ["**/src/**", "**/test/**", "**/rollup/**"]
	},
	"linter": {
		"rules": {
			"style": {
				"useNamingConvention": {
					"level": "warn",
					"options": {
						"strictCase": false,
						"requireAscii": true,
						"conventions": [
							{
								"formats": ["camelCase", "PascalCase", "CONSTANT_CASE"]
							}
						]
					}
				}
			}
		}
	}
}
